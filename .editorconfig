# http://editorconfig.org
root = true

[*]
indent_style = tabs
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.styl]
indent_size = 2
insert_final_newline = true

[*.html]
indent_size = 2
insert_final_newline = true

[*.js]
indent_size = 2
insert_final_newline = true

[*.json]
indent_size = 2
