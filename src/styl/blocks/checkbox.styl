.checkbox
  position relative
  display inline-block
  vertical-align top


  &__inp
    position absolute
    opacity 0
    z-index -1
    left 0
    top 0


  &__ind

    &:before
      content ''
      position absolute

    &:after
      content ''
      position absolute

  &__inp:checked + &__ind
    &:before
      position absolute
    &:after
      position absolute
