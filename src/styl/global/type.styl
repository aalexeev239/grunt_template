// =========================
// Body reset
// =========================
*
*:before
*:after
  box-sizing inherit


html
  font-size 10px
  -webkit-tap-highlight-color rgba(0,0,0,0)
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  box-sizing border-box


body
  font-family ff_base
  font-size fz_base
  line-height lh_base
  color c_base
  background-color bg_base
  box-sizing border-box



// =========================
// Reset fonts for relevant elements
// =========================
input
button
select
textarea
  font-family inherit
  font-size inherit
  line-height inherit





// =========================
// Figures
//
// We reset this here because previously Normalize had no `figure` margins. This
// ensures we don't break anyone's use of the element.
// =========================
figure
  margin 0





// =========================
// Images
// =========================
img
  vertical-align top





// =========================
// Horizontal rules
// =========================
hr
  margin-top lh_base
  margin-bottom lh_base
  border 0





// =========================
// Headers
// =========================
h1
.h1
h2
.h2
h3
.h3
h4
.h4
h5
.h5
h6
.h6
  display block
  font-family ff_base
  font-weight 700
  margin 0
  color c_base

